#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /usr/lib/$ARCH-linux-gnu/libicu*.so.52
    /usr/lib/$ARCH-linux-gnu/libicu*.so.52.1
"


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    echo ERROR: unknown stage
    exit 1
fi

