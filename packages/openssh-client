#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /usr/bin/ssh-argv0
r   /usr/bin/ssh-keyscan
r   /usr/lib/openssh/ssh-keysign
r   /usr/lib/openssh/ssh-pkcs11-helper
"
# TODO
# - /usr/share/apport
# - /usr/share/upstart

# /usr/share/doc, /usr/share/info and /usr/share/man are all dealt with
# centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
else
    # unsupported stage
    exit 1
fi

