#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /etc/ssh/ssh_host_*_key*
"


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
elif [ "$STAGE" = "fixup" ]; then
    exit 2
    # FIXME
    # - add a script to generate new host keys on bootup..
else
    # unsupported stage
    exit 1
fi

