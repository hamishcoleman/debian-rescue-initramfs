#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /sbin/xfs_repair
    /usr/sbin/xfs_db
    /usr/sbin/xfs_io
    /usr/sbin/xfs_logprint
    /usr/sbin/xfs_mdrestore
"

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    # unsupported stage
    exit 1
fi

