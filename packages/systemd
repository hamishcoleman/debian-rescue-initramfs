#!/bin/bash

DEBOOT="$1"
STAGE="$2"

DEL="
    /bin/loginctl
    /bin/machinectl
    /bin/systemd-inhibit
    /usr/bin/busctl
    /usr/bin/hostnamectl
    /usr/bin/localectl
    /usr/bin/systemd-cgls
    /usr/bin/timedatectl
    /lib/systemd/systemd-networkd
    /lib/systemd/systemd-timedated
    /lib/systemd/systemd-localed
    /lib/systemd/systemd-hostnamed
    /lib/systemd/system/systemd-modules-load.service
"


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    echo ERROR: unknown stage
    exit 1
fi

