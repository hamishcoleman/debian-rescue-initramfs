#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"


if [ "$STAGE" = "fixup" ]; then
    # the initrd looks for a different file to start as init than
    # a normal bootup.  # so, we need to specifically create a link
    # for it.
    # TODO - when we use a script as /init remove this
    ln -fs sbin/init $DEBOOT/init
else
    # unsupported stage
    exit 1
fi

