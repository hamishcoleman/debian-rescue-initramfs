#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL2="
    $DEBOOT/usr/share/screen/utf8encodings/*
"

# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    rm -f $DEL2
else
    # unsupported stage
    exit 1
fi

