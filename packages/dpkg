#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /var/lib/dpkg/*-old
r   /var/lib/dpkg/info/*.md5sums
r   /var/lib/dpkg/info/*.symbols
r   /var/lib/dpkg/info/*.templates
r   /var/log/dpkg.log
r   /var/log/alternatives.log
"

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
else
    # unsupported stage
    exit 1
fi

