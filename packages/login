#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /usr/bin/faillog
    /usr/bin/newgrp
    /usr/bin/sg
    /var/log/faillog
    /var/log/lastlog
"

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    # unsupported stage
    exit 1
fi

