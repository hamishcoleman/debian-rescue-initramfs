#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

# This package is only installed due to other dependancies, which we
# are either ignoring, or filling with the busybox wget, so while it
# looks strange that we are deleting the only real files from this package
# it is not a mistake.

FILES_LIST="
r   /etc/wgetrc
r   /usr/bin/wget
"


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
else
    # unsupported stage
    exit 1
fi

