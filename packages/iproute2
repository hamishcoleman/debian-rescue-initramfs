#!/bin/bash

DEBOOT="$1"
STAGE="$2"

DEL="
    /bin/ss
    /sbin/rtacct
    /sbin/rtmon
    /usr/sbin/arpd
"
# TODO
# - /etc/iproute2
# - /usr/lib/tc

# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    echo ERROR: unknown stage
    exit 1
fi

