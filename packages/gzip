#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /bin/gzexe
    /bin/zcmp
    /bin/zdiff
    /bin/zegrep
    /bin/zfgrep
    /bin/zforce
    /bin/zgrep
    /bin/zless
    /bin/zmore
    /bin/znew
"
# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
    ln -fs gunzip $DEBOOT/bin/uncompress
else
    echo ERROR: unknown stage
    exit 1
fi

