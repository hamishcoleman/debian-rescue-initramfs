#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /usr/bin/usb-devices
"
# TODO
# - /usr/share/misc/usb.ids
# - /usr/share/pkgconfig/usbutils.pc
# - /var/lib/usbutils

# /usr/share/doc, /usr/share/info and /usr/share/man are all dealt with
# centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    # unsupported stage
    exit 1
fi

