#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /etc/default/ipmievd
    /etc/init.d/ipmievd
    /lib/systemd/system/ipmievd.service
    /usr/lib/modules-load.d/ipmievd.conf
    /usr/sbin/ipmievd
    /usr/share/ipmitool/oem_ibm_sel_map
"

# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    # unsupported stage
    exit 1
fi

