#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /etc/default/ipmievd
r   /etc/init.d/ipmievd
r   /lib/systemd/system/ipmievd.service
r   /usr/lib/modules-load.d/ipmievd.conf
r   /usr/sbin/ipmievd
r   /usr/share/ipmitool/oem_ibm_sel_map
"

# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
else
    # unsupported stage
    exit 1
fi

