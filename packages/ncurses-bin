#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /usr/bin/captoinfo
r   /usr/bin/infocmp
r   /usr/bin/infotocap
r   /usr/bin/ncurses5-config
r   /usr/bin/ncursesw5-config
r   /usr/bin/tabs
r   /usr/bin/tic
r   /usr/bin/toe
"

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
else
    # unsupported stage
    exit 1
fi

