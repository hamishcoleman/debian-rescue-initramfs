#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

#FILES_LIST="
#r   /etc/dropbear/dropbear_*_host_key*
#"


if [ "$STAGE" = "minimise" ]; then
    exit 1

    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
elif [ "$STAGE" = "fixup" ]; then
    exit 1
    # FIXME
    # - add a script to generate new host keys on bootup..
    #   dropbearkey -t rsa -f /etc/dropbear/dropbear_rsa_host_key
    #   dropbearkey -t dss -f /etc/dropbear/dropbear_dss_host_key
    # then re-enable the key deletion above
else
    # unsupported stage
    exit 1
fi

