#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /usr/sbin/tzconfig
"
DEL2="
    $DEBOOT/usr/share/zoneinfo/*
"

# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
    rm -rf $DEL2
else
    # unsupported stage
    exit 1
fi

