#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /sbin/shadowconfig
    /usr/bin/chage
    /usr/bin/chfn
    /usr/bin/chsh
    /usr/bin/expiry
    /usr/bin/gpasswd
    /usr/sbin/groupadd
    /usr/sbin/groupdel
    /usr/sbin/groupmod
    /usr/sbin/useradd
    /usr/sbin/userdel
    /usr/sbin/usermod
"
# TODO
# - /etc/pam.d
# - /etc/cron.daily
# - /etc/default

# /usr/share/doc, /usr/share/info, /usr/share/man and /usr/share/lintian
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
else
    # unsupported stage
    exit 1
fi

