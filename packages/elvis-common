#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

DEL="
    /usr/share/doc-base/elvis
    /usr/share/elvis/elvis.glade
    /usr/share/elvis/elvis.gnome
    /usr/share/elvis/tags
    /usr/share/pixmaps/elvis_32x32.xpm
"
DEL2="
    $DEBOOT/usr/share/elvis/manual/*
    $DEBOOT/usr/share/elvis/stubs/*
"

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    for i in $DEL; do
        rm -f $DEBOOT/$i
    done
    rm -f $DEL2
else
    # unsupported stage
    exit 1
fi

