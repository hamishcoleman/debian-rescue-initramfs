#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /usr/share/doc-base/elvis
r   /usr/share/elvis/elvis.glade
r   /usr/share/elvis/elvis.gnome
r   /usr/share/elvis/manual/*
r   /usr/share/elvis/stubs/*
r   /usr/share/elvis/tags
r   /usr/share/pixmaps/elvis_32x32.xpm
"

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done
else
    # unsupported stage
    exit 1
fi

