#!/bin/bash

DEBOOT="$1"
ARCH="$2"
STAGE="$3"

FILES_LIST="
r   /var/cache/debconf/passwords.dat
r   /var/cache/debconf/config.dat-old
r   /var/cache/debconf/config.dat
r   /var/cache/debconf/templates.dat-old
r   /var/cache/debconf/templates.dat
"

# TODO
# - /var/cache/apt/
# - /var/lib/apt/lists

# /usr/share/doc, /usr/share/locale and /usr/share/man
# are all dealt with centrally


if [ "$STAGE" = "minimise" ]; then
    # remove files
    echo "$FILES_LIST" | while read action file; do
        case "$action" in
        r)  eval rm -f "${DEBOOT}/$file"
            ;;
        esac
    done

else
    # unsupported stage
    exit 1
fi

